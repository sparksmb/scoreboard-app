.page-header
  %h2= @team.name
  .actions
    = link_to "Edit", edit_team_path(@team), class: "btn"
    = link_to "Delete", team_path(@team), class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }
    = link_to "Back to Teams", teams_path, class: "btn btn-secondary"

.card
  %h3 Team Details
  %p
    %strong Organization:
    = @team.organization.name
  
  - if @team.primary_color.present? || @team.secondary_color.present?
    %p
      %strong Colors:
      - if @team.primary_color.present?
        %span{style: "display: inline-block; width: 30px; height: 30px; background-color: #{@team.primary_color}; border-radius: 3px; margin-right: 10px; vertical-align: middle;"}
        = @team.primary_color
      - if @team.secondary_color.present?
        %span{style: "display: inline-block; width: 30px; height: 30px; background-color: #{@team.secondary_color}; border-radius: 3px; margin-left: 10px; margin-right: 10px; vertical-align: middle;"}
        = @team.secondary_color
  
  - if @team.logo.attached?
    %p
      %strong Logo:
      %br
      = image_tag @team.logo, style: "max-width: 200px; max-height: 200px;"

- if @team.games.any?
  .card
    %h3 Games
    %table
      %thead
        %tr
          %th Date
          %th Matchup
          %th Location
          %th Status
      %tbody
        - @team.games.includes(:home_team, :visitor_team).order(:game_date).each do |game|
          %tr
            %td= game.game_date.strftime("%m/%d/%Y %I:%M %p")
            %td
              = link_to game_path(game) do
                = game.display_name
            %td= game.location
            %td
              %span{class: "status-#{game.status}"}= game.status.humanize
- else
  .card
    %p No games scheduled for this team.
    = link_to "Schedule a Game", new_game_path, class: "btn"
